{
  "extends": ["@config/stylelint-config"],
  "rules": {
    "no-descending-specificity": null,
    "selector-class-pattern": null,
    "selector-pseudo-class-no-unknown": [
      true,
      { "ignorePseudoClasses": ["has", "is", "where"] }
    ],
    "at-rule-no-unknown": [
      true,
      { "ignoreAtRules": ["define-mixin", "mixin", "layer"] }
    ]
  }
}
